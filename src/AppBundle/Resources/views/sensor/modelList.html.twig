{% extends 'AppBundle::base.html.twig' %}


{% block otherstylesheets %}
    <script src="{{ asset('bundles/framework/js/sorttable.js') }}"></script>
{% endblock %}

{% block body %}

    <h1 align="center">
        Sensor Models
    </h1>
    <div class="container">
        <div class="row">
            <table class="table table-striped sortable">
                <tr class="customHeader">
                    <th>No.</th>
                    <th>Model ID</th>
                    <th>Manufacturer</th>
                    <th>Basic Unit</th>
                    <th>Detection Range</th>

                </tr>
                {% for m in models  %}
                    <tr>
                        {% if m.modelId|trim is not empty %}
                            <td class="col-md-1">{{ loop.index-1 }}</td>
                            <td class="col-md-3">{{ m.modelId }}</td>

                            {% if m.manufacture|trim is not empty %}
                                <td class="col-md-4">{{ m.manufacture }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}

                            {% if m.unit|trim is not empty %}
                                <td class="col-md-2">{{ m.unit }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}

                            {% if m.getDetRange|trim is not empty %}
                                <td class="col-md-2"> {{ m.getDetRange }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}


                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        </div>

    </div>



{% endblock %}