{% extends 'AppBundle::base.html.twig' %}

{% block otherstylesheets %}
    <script src="{{ asset('bundles/framework/js/sorttable.js') }}"></script>
{% endblock %}


{% block body %}

    <h1 align="center">
        Sensor
    </h1>
    <div class="container">
        <div class="row">

            Please Click the table column header to sort by.
            <hr>

        </div>
        <div class="row">

        </div>
        <div class="row">
            <table class="table table-striped sortable">
                <tr class="customHeader">
                    <th>No</th>
                    <th>Sensor ID</th>
                    <th>Sensor Type</th>
                    <th>Sensor Model</th>
                    <th>Sensor Location</th>
                    <th>Installed Date</th>

                </tr>

                {% for sensor in sensors  %}
                    <tr>
                        {% if sensor.getSensorId|trim is not empty %}
                            <td class="col-md-1">{{ loop.index-1 }}</td>
                            <td class="col-md-2"><a href="{{ path('viewSensor') }}?id={{ sensor.getSensorId}}">{{ sensor.getSensorId }}</a></td>

                            {% if sensor.getTypeName|trim is not empty %}

                                <td class="col-md-2">{{ sensor.getTypename }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}

                            {% if sensor.getModelId|trim is not empty %}
                                <td class="col-md-2">{{ sensor.getModelId }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}

                            {% if sensor.getLocId|trim is not empty %}
                                <td class="col-md-2"> {{ sensor.getLocId }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}

                            {% if sensor.getInsDate|trim is not empty %}
                                <td class="col-md-3">{{ sensor.getInsDate }}</td>
                            {% else %}
                                <td >Not Set</td>
                            {% endif %}


                        {% endif %}
                    </tr>
                {% endfor %}
            </table>
        </div>

    </div>



{% endblock %}