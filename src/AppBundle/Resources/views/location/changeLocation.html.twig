{# AppBundle/Resources/views/about.html.twig #}
{% extends 'AppBundle::base.html.twig' %}
{% block otherstylesheets %}
    {#Sidebar style#}
    <script src="{{ asset('bundles/framework/js/confirmationPopUp.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/dialog.css') }}"/>
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/addForm.css') }}"/>
{% endblock %}

{% form_theme form 'AppBundle:Form:bootstrap_3_layout.html.twig' %}

{% block body %}
    <div id="dialogoverlay"></div>
    <div id="dialogbox">
        <div>
            <div id="dialogboxhead"></div>
            <div id="dialogboxbody"></div>
            <div id="dialogboxfoot"></div>
        </div>
    </div>


    {% for msg in app.session.flashbag.get('msg') %}
        <script type="text/javascript">
            Alert.render('{{ msg }}');
        </script>
    {% endfor %}

    <h1 align="center">
        Change Location
        <hr>
    </h1>
    <div class="container">
        <div class="container formContainer col-md-6">
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-md-2"></div>
            </div>

        </div>
    </div>
{% endblock %}