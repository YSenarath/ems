{# AppBundle/Resources/views/about.html.twig #}
{% extends 'AppBundle::base.html.twig' %}
{% block otherstylesheets %}
    {#Sidebar style#}
    <script src="{{ asset('bundles/framework/js/confirmationPopUp.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('bundles/framework/css/dialog.css') }}"/>
{% endblock %}

{% form_theme form 'AppBundle:Form:bootstrap_3_layout.html.twig' %}

{% block body %}
    <div id="dialogoverlay"></div>
    <div id="dialogbox">
        <div>
            <div id="dialogboxhead"></div>
            <div id="dialogboxbody"></div>
            <div id="dialogboxfoot"></div>
        </div>
    </div>


    {% for msg in app.session.flashbag.get('msg') %}
        <script type="text/javascript">
            Alert.render('{{ msg }}');
        </script>
    {% endfor %}


    <div class="container">
        <div class="page-header">
            <h2>Change Location</h2>
        </div>
    </div>
    <div class="container">
        <div class="col-md-2"></div>
        <div class="col-md-6">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}