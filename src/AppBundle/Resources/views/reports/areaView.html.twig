{% endblock %}

{% block body %}

    <h1 align="center">
        {{ areaName }}
    </h1>

    {% if (error is defined) %}
        <div id="errorMsg" align="center">
            {{ error }}
        </div>

    {% endif %}

    {% if (noOfLocations is defined) %}
        <div id="areaMean" align="center">
            <table>
                <tr>
                    <td>Temperature</td>
                    <td>{{ meanTemp }} Â°C</td>
                </tr>
                <tr>
                    <td>Humidity</td>
                    <td>{{ meanHumidity }} %</td>
                </tr>
                <tr>
                    <td>Pressure</td>
                    <td>{{ meanPressure }} KPa</td>
                </tr>
                <tr>
                    <td>Wind speed</td>
                    <td>{{ meanWind['speed'] }} m/s</td>
                </tr>
                <tr>
                    <td>Wind Direction</td>
                    <td>{{ meanWind['direction'] }}</td>
                </tr>
                <tr>
                    <td>Air Quality</td>
                    <td> {{ meanAir['airQly'] }} %</td>
                </tr>
                <tr>
                    <td>Oxygen content</td>
                    <td> {{ meanAir['O2'] }} %</td>
                </tr>
                <tr>
                    <td>Carbon diaoxide content</td>
                    <td> {{ meanAir['CO2'] }} %</td>
                </tr>
            </table>
        </div>
    {% endif %}

{% endblock %}
