{# AppBundle/Resources/views/reports/areas.html.twig #}
{% extends 'AppBundle::base.html.twig' %}
 {% block otherstylesheets %}
     {#Sidebar style#}
     <link rel="stylesheet" href="{{ asset('bundles/framework/css/reportAreaSideBarStyles.css') }}"/>
 {% endblock %}

{% block body %}

    <h1 align="center">
        Areas
    </h1>

            <ul id="sidebar" >
                {% for area in areas %}
                    {% if area.name|trim is not empty %}
                        <li><h3><a href="{{ path('reportAreaView', {'viewArea':  area.name}) }}">{{ area.name }}</a></h3></li>
                    {% endif %}

                {% endfor %}
            </ul>

{% endblock %}